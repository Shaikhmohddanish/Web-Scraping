from bs4 import BeautifulSoup
import requests
import csv
header=['Quotes','Author','About','Tags']
data=open('Quotes.csv','w')
writer=csv.writer(data)
writer.writerow(header)
for i in range(0,11):
    url='http://quotes.toscrape.com/page/{}/'.format(i)
    source=requests.get(url).text   
    soup=BeautifulSoup(source,'lxml')
    Main=soup.find('div',class_='quote')
    for  in Main:
        Quotes=d.find('span',class_='text').text
        Author=d.find('small',class_='author').text
        Tags=d.find('a',class_='tag').text
        li=[Quotes,Author,Tags]
        writer.writerow(li)
